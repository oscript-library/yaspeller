
#Область ПрограммныйИнтерфейс

Функция ПолучитьИсправленныйТекст(ВходящийТекст) Экспорт
	
	Спел = Новый Yaspeller();
	МассивОшибок = Спел.ПроверитьТекст(ВходящийТекст);

	Если МассивОшибок.Количество() = 0 Тогда
		Возврат ВходящийТекст;
	КонецЕсли;

	Результат = ВходящийТекст;

	для каждого Ошибка из МассивОшибок Цикл
		Результат = СтрЗаменить(Результат, Ошибка.ИсходноеСлово, Ошибка.Подсказки[0]);
	КонецЦикла;

	Возврат Результат;

КонецФункции	

