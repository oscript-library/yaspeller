Процедура ТестДолжен_ПроверитьПравельноеСлово() Экспорт
	
	Спел = Новый Yaspeller();
	МассивОшибок = Спел.ПроверитьТекст("Привет");
	
	Утверждения.Проверить(ТипЗнч(МассивОшибок) = Тип("Массив"), "Ошибка проверки типа возвращаемых данных");
	Утверждения.Проверить(МассивОшибок.Количество() = 0, "Ошибка проверки неправельного слова");
	
КонецПроцедуры

Процедура ТестДолжен_ПроверитьНеправельноеСлово() Экспорт
	
	Спел = Новый Yaspeller();
	МассивОшибок = Спел.ПроверитьТекст("Превет");
	
	
	Утверждения.Проверить(ТипЗнч(МассивОшибок) = Тип("Массив"), "Ошибка проверки типа возвращаемых данных");	
	Утверждения.Проверить(МассивОшибок.Количество() = 1, "Ошибка проверки неправельного слова");
	
	Ошибка = МассивОшибок[0];
	Утверждения.Проверить(Ошибка.Подсказки.Количество() = 3, "Ошибка проверки количества подсказок");
	Утверждения.Проверить(Ошибка.Подсказки[0] = "Привет", "Ошибка проверки результата подсказки");
	
	Ошибка = МассивОшибок[0];
	
	Утверждения.Проверить(Ошибка.КодОшибки = 1, "Нерпавельное значение Кода ошибки");
	Утверждения.Проверить(Ошибка.Позиция = 0, "Неправельное значение позиции ошибочного слова");
	Утверждения.Проверить(Ошибка.Строка = 0, "Неправельное значение номера строки ошибочного слова");
	Утверждения.Проверить(Ошибка.Столбец = 0, "Неправельное значение номера столбца ошибочного слова");
	Утверждения.Проверить(Ошибка.Длина = 6, "Неправельное значение длины ошибочного слова");
	Утверждения.Проверить(Ошибка.ИсходноеСлово = "Превет", "Неправельное исходное значение ошибочного слова");
	
КонецПроцедуры

Процедура ТестДолжен_ПроверитьНеправельныйТекст() Экспорт
	
	Спел = Новый Yaspeller();
	МассивОшибок = Спел.ПроверитьТекст("Превет, как у тябя дела?");
	
	
	Утверждения.Проверить(ТипЗнч(МассивОшибок) = Тип("Массив"), "Ошибка проверки типа возвращаемых данных");	
	Утверждения.Проверить(МассивОшибок.Количество() = 2, "Ошибка проверки неправельного слова");
	
	Ошибка = МассивОшибок[0];
	Утверждения.Проверить(Ошибка.Подсказки.Количество() = 3, "Ошибка проверки количества подсказок");
	Утверждения.Проверить(Ошибка.Подсказки[0] = "Привет", "Ошибка проверки результата подсказки");
	
	ПерваяОшибка = МассивОшибок[0];
	
	Утверждения.Проверить(ПерваяОшибка.КодОшибки = 1, "Нерпавельное значение Кода ошибки первого ошибочного слова");
	Утверждения.Проверить(ПерваяОшибка.Позиция = 0, "Неправельное значение позиции ошибочного первого ошибочного слова");
	Утверждения.Проверить(ПерваяОшибка.Строка = 0, "Неправельное значение номера строки ошибочного первого ошибочного слова");
	Утверждения.Проверить(ПерваяОшибка.Столбец = 0, "Неправельное значение номера столбца ошибочного первого ошибочного слова");
	Утверждения.Проверить(ПерваяОшибка.Длина = 6, "Неправельное значение длины ошибочного первого ошибочного слова");
	Утверждения.Проверить(ПерваяОшибка.ИсходноеСлово = "Превет", "Неправельное исходное значение ошибочного первого ошибочного слова");

	ВтораяОшибка = МассивОшибок[1];
	
	Утверждения.Проверить(ВтораяОшибка.КодОшибки = 1, "Нерпавельное значение Кода ошибки второго ошибочного слова");
	Утверждения.Проверить(ВтораяОшибка.Позиция = 14, "Неправельное значение позиции ошибочного второго ошибочного слова");
	Утверждения.Проверить(ВтораяОшибка.Строка = 0, "Неправельное значение номера строки ошибочного второго ошибочного слова");
	Утверждения.Проверить(ВтораяОшибка.Столбец = 14, "Неправельное значение номера столбца ошибочного второго ошибочного слова");
	Утверждения.Проверить(ВтораяОшибка.Длина = 4, "Неправельное значение длины ошибочного второго ошибочного слова");
	Утверждения.Проверить(ВтораяОшибка.ИсходноеСлово = "тябя", "Неправельное исходное значение ошибочного второго ошибочного слова");
	
КонецПроцедуры

